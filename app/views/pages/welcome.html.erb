<section id="best-restaurant" class="best-restaurant">
  <div class="container">

    <div class="row">
      <div class="col-md-12 text-center">
        <h2 class="font-lg">Choose from the  <span class="font-semibold chef-red">Most Popular Cocktails</span></h2>
      </div>
      <!-- col-md-12 -->
    </div>

    <!-- Single Restaurant detail -->
    <div class="row">
      <!-- Restaurant detail -->
      <% @recipes.each do |recipe| %>
        <div class="col-md-6 col-xs-12">
          <div class="item-block">
            <header>
              <a href="#"><img src="img/Bayleaf.jpg" alt=""></a>
              <div class="hgroup">
                <h4><a href="/recipes/<%= recipe.id %>"><%= recipe.name %></a></h4>
                <h5><span class="label label-warning">Popular</span></h5>
              </div>
              <div class="header-meta">
                <span class><a href="/users/<%= recipe.user.id %>">Submitted by <%= recipe.user.username %></a></span>
              </div>
            </header>

            <footer>
              <p class="status">
                <% if recipe.average_rating == 5 %>
                            <span style='color: #ED1C3B;'>
                              <i class='fa fa-star' ></i> </span>
                            <span style='color: #ED1C3B;'>
                              <i class='fa fa-star' ></i> </span>
                            <span style='color: #ED1C3B;'>
                              <i class='fa fa-star' ></i> </span>
                            <span style='color: #ED1C3B;'>
                              <i class='fa fa-star' ></i> </span>
                            <span style='color: #ED1C3B;'>
                              <i class='fa fa-star' ></i> </span>
                          <% elsif recipe.average_rating == 4 %>
                            <span style='color: #ED1C3B;'>
                              <i class='fa fa-star' ></i> </span>
                            <span style='color: #ED1C3B;'>
                              <i class='fa fa-star' ></i> </span>
                            <span style='color: #ED1C3B;'>
                              <i class='fa fa-star' ></i> </span>
                            <span style='color: #ED1C3B;'>
                              <i class='fa fa-star' ></i> </span>
                            <span style='color: #CCCCCC;'>
                              <i class='fa fa-star' ></i> </span>
                <% end %>
                (<span><%= recipe.total_ratings %></span>)
              </p>
              <p class="status"><strong></strong> </p>
              <p class="status"><strong></strong> </p>

              <div class="action-btn">
                <a class="btn btn-xs btn-danger" href="/recipes/<%= recipe.id %>">Make this!</a>
              </div>
            </footer>
          </div>
        </div>
        <!-- END Restaurant detail -->
      <% end %>

  </div>



</section>





