              <input class="search-form-input" name="key-word" placeholder="e.g. Martini, Manhattan, Greenpoint" type="text" />
            </div>
            <div class="select-field-wrap pull-left">
              <select class="search-form-select" name="categories">
                <option class="options" value="all-categories">FEEL LIKE HAVING</option>
                <option class="options" value="whiskey">WHISKEY</option>
                <option class="options" value="gin">GIN</option>
                <option class="options" value="vodka">VODKA</option>
                <option class="options" value="tequila ">TEQUILA</option>
                <option class="options" value="rum">RUM</option>
                <option class="options" value="cognac">COGNAC</option>
                <option class="options" value="liqueur">LIQUEUR</option>
              </select>
            </div>
            <div class="submit-field-wrap pull-left">
              <input class="search-form-submit bgred-1 white" name="key-word" type="submit" value="FIND A COCKTAIL" />
            </div>
          </form>
        </div>

      </div>
    </div>



  </div>
</section>

<!-- end static header -->

