<% @recipes.each do |recipe| %>
            <div class="col-xs-12">
              <div class="item-block">
                <header>
                  <% if recipe.card_image %>
                    <img src="img/Bayleaf.jpg" alt="">
                  <% else %>
                    <i class="fa fa-glass" aria-hidden="true"></i>
                  <% end %>

                  <div class="hgroup">
                    <h4><a href="/recipes/<%= recipe.id %>"><%= recipe.name %></a></h4>
                    <% if recipe.average_rating > 3 %>
                      <h5><span class="label label-warning">Popular</span></h5>
                    <% end %>
                  </div>
                  <div class="header-meta">
                    <span><a href="/users/<%= recipe.user.id %>">Submitted by <%= recipe.user.username %></a></span>
                  </div>
                </header>
                <div class="item-body">
                  <p><%= recipe.description %></p>
                </div>

                <footer>
                  <span>
                  <!-- This is all for handling ratings -->
                    <% if current_user&&current_user.ratings.find_by(recipe_id: recipe.id) %>
                          <% if current_user.ratings.find_by(recipe_id: recipe.id).score == 5 %>
                            <%= render partial: "rated_stars", locals: {colors: star_array(@gold_star,@grey_star,5,5)} %>
                          <% elsif current_user.ratings.find_by(recipe_id: recipe.id).score == 4 %>
                            <%= render partial: "rated_stars", locals: {colors: star_array(@gold_star,@grey_star,4,5)} %>
                          <% elsif current_user.ratings.find_by(recipe_id: recipe.id).score == 3 %>
                            <%= render partial: "rated_stars", locals: {colors: star_array(@gold_star,@grey_star,3,5)} %>
                          <% elsif current_user.ratings.find_by(recipe_id: recipe.id).score == 2 %>
                            <%= render partial: "rated_stars", locals: {colors: star_array(@gold_star,@grey_star,2,5)} %>
                          <% elsif current_user.ratings.find_by(recipe_id: recipe.id).score == 1 %>
                            <%= render partial: "rated_stars", locals: {colors: star_array(@gold_star,@grey_star,1,5)} %>
                          <% end %>
                    <% elsif current_user %>
                      <% if recipe.average_rating.round == 5 %>
                        <%= render partial: "unrated_user_stars", locals: {colors: star_array(@red_star,@grey_star,5,5), current_user: current_user, recipe: recipe} %>
                      <% elsif recipe.average_rating.round == 4 %>
                        <%= render partial: "unrated_user_stars", locals: {colors: star_array(@red_star,@grey_star,4,5), current_user: current_user, recipe: recipe} %>
                      <% elsif recipe.average_rating.round == 3 %>
                        <%= render partial: "unrated_user_stars", locals: {colors: star_array(@red_star,@grey_star,3,5), current_user: current_user, recipe: recipe} %>
                      <% elsif recipe.average_rating.round == 2 %>
                        <%= render partial: "unrated_user_stars", locals: {colors: star_array(@red_star,@grey_star,2,5), current_user: current_user, recipe: recipe} %>
                      <% elsif recipe.average_rating.round == 1 %>
                        <%= render partial: "unrated_user_stars", locals: {colors: star_array(@red_star,@grey_star,1,5), current_user: current_user, recipe: recipe} %>
                      <% else %>
                        <%= render partial: "unrated_user_stars", locals: {colors: star_array(@grey_star,@grey_star,5,5), current_user: current_user, recipe: recipe} %>
                      <% end %>
                    <% else %>
                      <% if recipe.average_rating == 5 %>
                        <%= render partial: "rated_stars", locals: {colors: star_array(@red_star,@grey_star,5,5)} %>
                      <% elsif recipe.average_rating == 4 %>
                        <%= render partial: "rated_stars", locals: {colors: star_array(@red_star,@grey_star,4,5)} %>
                      <% elsif recipe.average_rating == 3 %>
                        <%= render partial: "rated_stars", locals: {colors: star_array(@red_star,@grey_star,3,5)} %>
                      <% elsif recipe.average_rating == 2 %>
                        <%= render partial: "rated_stars", locals: {color1: star_array(@red_star,@grey_star,2,5)} %>
                      <% elsif recipe.average_rating == 1 %>
                        <%= render partial: "rated_stars", locals: {color1: star_array(@red_star,@grey_star,1,5)} %>
                      <% else %>
                        <%= render partial: "rated_stars", locals: {color1: star_array(@grey_star,@grey_star,5,5)} %>
                      <% end %>
                    <% end %>

                    
                    <span class="review">
                      (<span><%= recipe.total_ratings %></span>)
                    </span>
                  </span>
                </p>
                  <p class="status"><strong></strong></p>
                  <p class="status"><strong></strong></p>

                  <div class="action-btn">
                    <a class="btn btn-xs btn-danger" href="/recipes/<%= recipe.id %>">Make This!</a>
                  </div>
                </footer>
              </div>
            </div>
          <% end %>
          <!-- END Job item -->
          <!-- END Restaurant detail -->