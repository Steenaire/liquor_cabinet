<!-- Content Start -->



<!-- Start Pages Title  -->

<section id="page-title" class="page-title-style2">
  <div class="color-overlay"></div>
  <div class="container inner-img">
    <div class="row">
      <div class="Page-title">
        <div class="col-md-12 text-center">
          <div class="title-text">
            <h6>Great Service</h6>
            <h2 class="page-title"><%= @recipe.name %></h2>
          </div>
        </div>
        <div class="col-md-12 text-center">
          <div class="breadcrumb-trail breadcrumbs">
            <span class="trail-begin"><a href="#">Home</a></span>
            <span class="sep">/</span> <span class="trail-end">Faq</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- End Pages Title  -->

<!-- Main container -->
<main class="main-content">
  <!-- Start Faq Page -->

  <section id="faq-result">
    <div class="faq-all-content">
      <section class="light-wrapper">

        <div class="container">
                    <div class="inner">
                        <header class="section-header text-left">
                            <h2><%= @recipe.name %></h2>
                            <span><%= @recipe.description %></span>
                        </header>

                        <ul class="faq-items">
                            <li>
                                <h5>Ingredients:</h5>
                                  <% @recipe.recipe_ingredients.each do |recipe_ingredient| %>
                                    <p><%= recipe_ingredient.measure_unit(@unit) %>
                                    <%= recipe_ingredient.brand.name %>
                                    <%= recipe_ingredient.ingredient.name %></p>
                                  <% end %>
                            </li>

                            <li>
                                <h5>Directions:</h5>
                                <p><%= @recipe.instructions %></p>
                            </li>

                            <li>
                                <h5>Convert to:</h5>
                                <a href="/recipes/<%= @recipe.id %>?<%= @convert_to %>=true"><p><%= @convert_to %></p></a>
                            </li>


                        </ul>
                        <div class="action-btn">
                          <%= link_to "I Made This!", "/timeline_drinks?user_id=#{current_user.id}&recipe_id=#{@recipe.id}", class: "btn btn-xs btn-danger", method: :post %>
                        </div>
                      </div>
                

        </div>
      </section>


    </div>
  </section>

  <!-- End Faq Page -->

</main>
<!-- END Main container -->



<!-- Content End -->