<!-- Content Start -->

<main class="main-content">



  <div class="container internal-body-container">
    <!-- Main container -->

    <div class="row">
      <!-- Main row -->

      <div class="col-md-3">
        <aside>
          <div class="filter-wrapper">

            <div>
              <div class="input-group col-md-12">

                <div class="form-group navbar-form navbar-left">
                  <p>Search recipes by name</p>
                  <%= form_tag('/recipes/search') do %>
                    <%= text_field_tag :search %>
                    <%= submit_tag "Search" %>
                  <% end %>
                </div>
                <div class="form-group navbar-form navbar-left">
                  <p>Search recipes by ingredient</p>
                  <%= form_tag('/recipes/search') do %>
                    <%= text_field_tag :ingredient_search %>
                    <%= submit_tag "Search" %>
                  <% end %>
                </div>

              </div>
            </div>

            <div class="filter-mobileTop" id="filterMenuTop">
              Filter <span class="text-right"><i class="fa fa-angle-down"></i></span>
            </div>

            <div class="leftside-filter" id="mobileFilter">
              <div class="filter-option-content">
                <div class="restaurant-status-section">
                  <div class="restaurant-status-title gray-deep-bg">
                    <i class="fa fa-glass" aria-hidden="true"></i> Status
                  </div>
                  <div class="restaurant-status-filter">
                    <ul class="list-unstyled">
                      <li>

                        <input type="checkbox" id="restaurantOpen">
                        <label for="restaurantOpen"><i class="icon-check custom-check" aria-hidden="true"></i> Restaurants Now Open</label>
                      </li>
                    </ul>

                  </div>
                </div>
                <div class="restaurant-service-section">
                  <div class="restaurant-service-title gray-deep-bg">
                    <i class="fa fa-glass" aria-hidden="true"></i> Service
                  </div>
                  <div class="restaurant-service-filter">
                    <ul class="list-unstyled">
                      <li>
                        <input type="checkbox" name="services" id="serviceDelivery" value="Delivery" checked>
                        <label for="serviceDelivery"><i class="icon-check custom-check" aria-hidden="true"></i> Delivery</label>
                      </li>
                      <li>
                        <input type="checkbox" name="services" id="serviceCollection" value="Collection" checked>
                        <label for="serviceCollection"><i class="icon-check custom-check" aria-hidden="true"></i> Collection</label>
                      </li>
                      <li>
                        <input type="checkbox" name="services" id="serviceReservation" value="Reservation" checked>
                        <label for="serviceReservation"><i class="icon-check custom-check" aria-hidden="true"></i> Reservation</label>
                      </li>
                    </ul>
                  </div>

                </div>

                <div class="restaurant-cuisines-section">
                  <div class="restaurant-cuisines-title gray-deep-bg">
                    <i class="fa fa-glass" aria-hidden="true"></i> Cuisine
                  </div>
                  <div class="restaurant-cuisines-filter">
                    <ul class="list-unstyled">
                      <li>
                        <input type="checkbox" value="" name="allcuisines" id="allCuisines" checked>
                        <label for="allCuisines"><i class="icon-check custom-check" aria-hidden="true"></i> View All</label>
                      </li>
                      <li>
                        <input type="checkbox" value="" name="allcuisines" id="SigleCuisine">
                        <label for="SigleCuisine"><i class="icon-check custom-check" aria-hidden="true"></i> Indian</label>
                      </li>

                    </ul>
                  </div>

                </div>

              </div>
            </div>
          </div>

        </aside>


      </div>

      <div class="col-md-9">

        <div class="row">
          <!-- Restaurant detail -->
          <!-- Job item -->
          <% @recipes.each do |recipe| %>
            <div class="col-xs-12">
              <div class="item-block">
                <header>
                  <img onClick="ratingStarRate(5,1,1)" src="img/Bayleaf.jpg" alt="">
                  <div class="hgroup">
                    <h4><a href="/recipes/<%= recipe.id %>"><%= recipe.name %></a></h4>
                    <h5><span class="label label-warning">Popular</span></h5>
                  </div>
                  <div class="header-meta">
                    <span><a href="/users/<%= recipe.user.id %>">Submitted by <%= recipe.user.username %></a></span>
                  </div>
                </header>
                <div class="item-body">
                  <p><%= recipe.description %></p>
                </div>

                <footer>
                  <p class="status">
                  <%= form_tag '/ratings', method: :post do %>
                    <%= text_field_tag :user_id, current_user.id %>
                    <%= text_field_tag :recipe_id, recipe.id %>
                    <%= text_field_tag :score %>
                    <%= submit_tag "rate" %>
                  <% end %>
                  <% if recipe.ratings.any? %>
                    <%= recipe.average_rating %>
                  <% end %>
                  <span>
                    <% if recipe.average_rating.round == 5 %>
                    <span>
                      <span onmouseover="ratingStarHover(this,1,<%= current_user.id %>,<%= recipe.id %>)" style="color: #ED1C3B;"><i class="fa fa-star" ></i></span>
                      <span onmouseover="ratingStarHover(this,2,<%= current_user.id %>,<%= recipe.id %>)" style="color: #ED1C3B;"><i class="fa fa-star" ></i></span>
                      <span onmouseover="ratingStarHover(this,3,<%= current_user.id %>,<%= recipe.id %>)" style="color: #ED1C3B;"><i class="fa fa-star" ></i></span>
                      <span onmouseover="ratingStarHover(this,4,<%= current_user.id %>,<%= recipe.id %>)" style="color: #ED1C3B;"><i class="fa fa-star" ></i></span>
                      <span onmouseover="ratingStarHover(this,5,<%= current_user.id %>,<%= recipe.id %>)" style="color: #ED1C3B;"><i class="fa fa-star" ></i></span>
                    </span>
                    <% elsif recipe.average_rating.round == 4 %>
                    <span>
                      <span onmouseover="ratingStarHover(this,1)" style="color: #ED1C3B;"><i class="fa fa-star" ></i></span>
                      <span onmouseover="ratingStarHover(this,2)" style="color: #ED1C3B;"><i class="fa fa-star" ></i></span>
                      <span onmouseover="ratingStarHover(this,3)" style="color: #ED1C3B;"><i class="fa fa-star" ></i></span>
                      <span onmouseover="ratingStarHover(this,4)" style="color: #ED1C3B;"><i class="fa fa-star" ></i></span>
                      <span onmouseover="ratingStarHover(this,5)" style="color: #CCCCCC;"><i class="fa fa-star" ></i></span>
                    </span>
                    <% elsif recipe.average_rating.round == 3 %>
                    <span>
                      <span onmouseover="ratingStarHover(this,1)" style="color: #ED1C3B;"><i class="fa fa-star" ></i></span>
                      <span onmouseover="ratingStarHover(this,2)" style="color: #ED1C3B;"><i class="fa fa-star" ></i></span>
                      <span onmouseover="ratingStarHover(this,3)" style="color: #ED1C3B;"><i class="fa fa-star" ></i></span>
                      <span onmouseover="ratingStarHover(this,4)" style="color: #CCCCCC;"><i class="fa fa-star" ></i></span>
                      <span onmouseover="ratingStarHover(this,5)" style="color: #CCCCCC;"><i class="fa fa-star" ></i></span>
                    </span>
                    <% elsif recipe.average_rating.round == 2 %>
                    <span>
                      <span onmouseover="ratingStarHover(this,1)" style="color: #ED1C3B;"><i class="fa fa-star" ></i></span>
                      <span onmouseover="ratingStarHover(this,2)" style="color: #ED1C3B;"><i class="fa fa-star" ></i></span>
                      <span onmouseover="ratingStarHover(this,3)" style="color: #CCCCCC;"><i class="fa fa-star" ></i></span>
                      <span onmouseover="ratingStarHover(this,4)" style="color: #CCCCCC;"><i class="fa fa-star" ></i></span>
                      <span onmouseover="ratingStarHover(this,5)" style="color: #CCCCCC;"><i class="fa fa-star" ></i></span>
                    </span>
                    <% elsif recipe.average_rating.round == 1 %>
                    <span>
                      <span onmouseover="ratingStarHover(this,1)" style="color: #ED1C3B;"><i class="fa fa-star" ></i></span>
                      <span onmouseover="ratingStarHover(this,2)" style="color: #CCCCCC;"><i class="fa fa-star" ></i></span>
                      <span onmouseover="ratingStarHover(this,3)" style="color: #CCCCCC;"><i class="fa fa-star" ></i></span>
                      <span onmouseover="ratingStarHover(this,4)" style="color: #CCCCCC;"><i class="fa fa-star" ></i></span>
                      <span onmouseover="ratingStarHover(this,5)" style="color: #CCCCCC;"><i class="fa fa-star" ></i></span>
                    </span>
                    <% else %>
                    <span>
                      <span onmouseover="ratingStarHover(this,1)" style="color: #CCCCCC;"><i class="fa fa-star" ></i></span>
                      <span onmouseover="ratingStarHover(this,2)" style="color: #CCCCCC;"><i class="fa fa-star" ></i></span>
                      <span onmouseover="ratingStarHover(this,3)" style="color: #CCCCCC;"><i class="fa fa-star" ></i></span>
                      <span onmouseover="ratingStarHover(this,4)" style="color: #CCCCCC;"><i class="fa fa-star" ></i></span>
                      <span onmouseover="ratingStarHover(this,5)" style="color: #CCCCCC;"><i class="fa fa-star" ></i></span>
                    </span>
                    <% end %>
                    <span class="review">
                      (<span><%= recipe.total_ratings %></span>)
                    </span>
                  </span>
                </p>
                  <p class="status"><strong></strong></p>
                  <p class="status"><strong></strong></p>

                  <div class="action-btn">
                    <a class="btn btn-xs btn-danger" href="/recipes/<%= recipe.id %>">Make This!</a>
                  </div>
                </footer>
              </div>
            </div>
          <% end %>
          <!-- END Job item -->
          <!-- END Restaurant detail -->
        </div>

      </div>

    </div>
    <!-- Main row end -->

  </div>
  <!-- Main container end -->

</main>

