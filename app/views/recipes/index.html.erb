<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Submitted by</th>
  </tr>
<% @recipes.each do |recipe| %>
  <tr>
    <td><a href="/recipes/<%= recipe.id %>"><%= recipe.name %></a></td>
    <td><a href="/recipes/<%= recipe.id %>"><%= recipe.description %></a></td>
    <td><a href="/recipes/<%= recipe.id %>"><%= recipe.user.username %></a></td>
  </tr>
<% end %>
</table>