<!-- Start Pages Title  -->

<section id="page-title" class="page-title-style2">
  <div class="color-overlay"></div>
  <div class="container inner-img">
    <div class="row">
      <div class="Page-title">
        <div class="col-md-12 text-center">
          <div class="title-text">

            <h2 class="page-title"><%= @user.username %>'s Profile</h2>
          </div>
        </div>
        <div class="col-md-12 text-center">
          <div class="breadcrumb-trail breadcrumbs">
            <span class="trail-begin"></span>
            <span class="sep">/</span> <span class="trail-end"></span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- End Pages Title  -->
<main class="main-content">

  <div ng-app="app">
    <div ng-controller="recipesCtrl" ng-init="setup()">



      <div class="container internal-body-container">
        <!-- Main container -->

        <div class="row">
          <!-- Main row -->

          <div class="col-md-9">

            <div class="contact-details myaccount-contact">
              <%= render partial: "/users/user_navigation" %>

              <% if @user.avatar && @user.avatar.file %>
                <center>
                  <%= image_tag @user.avatar.preview, class: "user-avatar" %>
                </center>
              <% end %>

              <% if current_user && @user.id == current_user.id %>

                <%= form_for @user do |f| %>
                  <%= f.file_field :avatar %>
                  <%= f.submit "Upload/Change Avatar", class: "btn btn-xs btn-danger" %>
                <% end %>

              <% end %>

              <% unless current_user.id == @user.id %>
                <% if @user.bio %>
                  <h2><%= @user.username %>'s Bio:</h2>
                  <p><%= simple_format(@user.bio) %></p>
                <% end %>
              <% end %>

              <% if current_user && @user.id == current_user.id %>

                <%= form_for @user do |f| %>
                  <%= f.text_area :bio, class: "bio" %>
                  <%= f.submit "Upload/Change Bio", class: "btn btn-xs btn-danger" %>
                <% end %>
              <% end %>

            </div>

          <!-- END OF DELIVERY ADDRESS SECTION -->
          </div>
          <%= render partial: "/recipes/sidebar" %>
        </div>



      </div>
    </div>
  </div>

  <!-- Main container end -->
</main>

<!-- Content End