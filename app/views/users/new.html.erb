<h1>Sign Up for Rando Store!</h1>

<%= form_tag '/users', method: :post do %>

  <div>
    <%= label_tag :username %>
    <%= text_field_tag :username %>
  </div>
  <div>
    <%= label_tag :email %>
    <%= text_field_tag :email, "", type: "email" %>
  </div>
  <div>
    <%= label_tag :password %>
    <%= text_field_tag :password, "", type: "password" %>
  </div>
  <div>
    <%= label_tag :password_confirmation %>
    <%= text_field_tag :password_confirmation, "", type: "password" %>
  </div>
  <%= submit_tag "Create Account" %>

<% end %>