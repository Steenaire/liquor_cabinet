<!-- Start Pages Title  -->

<section id="page-title" class="page-title-style2">
  <div class="color-overlay"></div>
  <div class="container inner-img">
    <div class="row">
      <div class="Page-title">
        <div class="col-md-12 text-center">
          <div class="title-text">

            <h2 class="page-title">Login Page</h2>
          </div>
        </div>
        <div class="col-md-12 text-center">
          <div class="breadcrumb-trail breadcrumbs">
            <span class="trail-begin"></span>
            <span class="sep">/</span> <span class="trail-end"></span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- End Pages Title  -->

<!-- Content Start -->
<main class="main-content">

  <div class="login-block">
    <div class="logo-wrapper">
      <%= image_tag("/assets/liquor-icon.png") %>
    </div>

    <h1>Sign Up for Liquor Cabinet Inventory</h1>

    <%= form_for @user do |f| %>

      <div class="form-group">
        <div class="input-group">
          <span class="input-group-addon">

            <%= f.text_field :username, placeholder: "Username" %>
          </span>
        </div>
      </div>
      <div class="form-group">
        <div class="input-group">
          <span class="input-group-addon">

            <%= f.text_field :email, type: "email", placeholder: "Email" %>
          </span>
        </div>
      </div>
      <div class="form-group">
        <div class="input-group">
          <span class="input-group-addon">

            <%= f.text_field :zip_code, placeholder: "Zip Code" %>
          </span>
        </div>
      </div>
      <div class="form-group">
        <div class="input-group">
          <span class="input-group-addon">

            <%= f.text_field :password, type: "password", placeholder: "Password" %>
          </span>
        </div>
      </div>
      <div class="form-group">
        <div class="input-group">
          <span class="input-group-addon">

            <%= f.text_field :password_confirmation, type: "password", placeholder: "Confirm Password" %>
          </span>
        </div>
      </div>
      <%= f.submit "Create Account" %>

    <% end %>

    <!-- ............................... -->

  </div> 

</main>



<!-- Main container end -->




<!-- Content End -->