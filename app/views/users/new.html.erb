<!-- Start Pages Title  -->

<section id="page-title" class="page-title-style2">
  <div class="color-overlay"></div>
  <div class="container inner-img">
    <div class="row">
      <div class="Page-title">
        <div class="col-md-12 text-center">
          <div class="title-text">

            <h2 class="page-title">Login Page</h2>
          </div>
        </div>
        <div class="col-md-12 text-center">
          <div class="breadcrumb-trail breadcrumbs">
            <span class="trail-begin"></span>
            <span class="sep">/</span> <span class="trail-end"></span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- End Pages Title  -->

<!-- Content Start -->
<main class="main-content">

  <div class="login-block">
    <img src="img/logo_gray.png" alt="">
    <h1>Sign Up for Liquor Cabinet Inventory</h1>

    <%= form_for @user do |f| %>

      <div class="form-group">
        <div class="input-group">
          <span class="input-group-addon">
            <%= f.label :username %>
            <%= f.text_field :username %>
          </span>
        </div>
      </div>
      <div class="form-group">
        <div class="input-group">
          <span class="input-group-addon">
            <%= f.label :email %>
            <%= f.text_field :email, type: "email" %>
          </span>
        </div>
      </div>
      <div class="form-group">
        <div class="input-group">
          <span class="input-group-addon">
            <%= f.label :zip_code %>
            <%= f.text_field :zip_code %>
          </span>
        </div>
      </div>
      <div class="form-group">
        <div class="input-group">
          <span class="input-group-addon">
            <%= f.label :password %>
            <%= f.text_field :password, type: "password" %>
          </span>
        </div>
      </div>
      <div class="form-group">
        <div class="input-group">
          <span class="input-group-addon">
            <%= f.label :password_confirmation %>
            <%= f.text_field :password_confirmation, type: "password" %>
          </span>
        </div>
      </div>
      <%= f.submit "Create Account" %>

    <% end %>

    <!-- ............................... -->

  </div> 

</main>



<!-- Main container end -->




<!-- Content End -->