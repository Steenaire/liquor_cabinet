<!-- Content Start -->



<!-- Start Pages Title  -->

<section id="page-title" class="page-title-style2">
  <div class="color-overlay"></div>
  <div class="container inner-img">
    <div class="row">
      <div class="Page-title">
        <div class="col-md-12 text-center">
          <div class="title-text">
            <h6>Great Service</h6>
            <h2 class="page-title">Add New Ingredient</h2>
          </div>
        </div>
        <div class="col-md-12 text-center">
          <div class="breadcrumb-trail breadcrumbs">
            <span class="trail-begin"><a href="#">Home</a></span>
            <span class="sep">/</span> <span class="trail-end">Faq</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- End Pages Title  -->

<!-- Main container -->
<main class="main-content">
  <!-- Start Faq Page -->

  <section id="faq-result">
    <div class="faq-all-content">
      <section class="light-wrapper">

        <div class="container">
          <div class="inner">
            <% if current_user %>
              <% if @ingredient && @ingredient.errors.any? %>
                <ul class = "error">
                  <% @ingredient.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              <% end %>
              <h2>Add a New Ingredient to the Database</h2>
              <%= form_tag '/ingredients/', method: :post do %>

                <div>
                  <%= label_tag :name %>
                  <%= text_field_tag :name %>
                </div>
                <%= submit_tag "Create Ingredient" %>
              <% end %>

            <% end %>
          </div>
        </div>
      </section>
    </div>
  </section>
</main>